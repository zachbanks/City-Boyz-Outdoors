= render :partial => 'error_messages'
= form_for @video do |f|
  %p
    = f.label :title
    %br 
    = f.text_field :title
  %p
    = render :partial => 'shared/markdown_info'
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label "Video Url"
    %br
    = f.text_field :source_url
  %p
    = f.submit ((@video.new_record? ? "Create" : "Update") + " Video")
