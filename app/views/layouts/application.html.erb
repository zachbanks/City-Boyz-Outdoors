<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
  <%= csrf_meta_tag %>
	<!-- Render stylesheets. -->
	<%= render 'layouts/stylesheets' %>
</head>
<body>

	<div class="container"> 
		<!-- Render header. -->
		<%= render 'layouts/header' %>
		<!-- Render any flash messages. -->
		<section>
			<% flash.each do |key, value| %>
				<div class="flash">
					<%= value %>
				</div>
			<% end %>
		</section>
		<!-- Render main content. -->
		<%= yield %>
		<!-- Render footer. -->
		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</div>

</body>
</html>
