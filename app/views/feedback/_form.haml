= render :partial => 'error_messages'
= form_for @feedback, :url => { :action => 'create' }, :html => { :method => :post } do |f|
	%p
		= f.label :name
		%br
		= f.text_field :name
	%p
		= f.label :email
		%br
		= f.text_field :email
	%p
		= f.label :subject
		%br
		= f.text_field :subject
	%p
		= render :partial => 'shared/markdown_info'
		= f.label :message
		%br
		= f.text_area :message
	%p
		= f.submit "Submit"
